{
  "manifest_version": 2,

  "name": "YouTube Picture-in-Picture",
  "short_name": "YPIP",
  "description": "Keep your YouTube videos visible at all times!",
  "version": "1.20",

  "icons": { "210": "icon.png" 
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["jquery.min.js", "popup.js"]
    }
  ],

  "background": {
    "scripts": ["events.js"],
    "persistent": false
  },

  "browser_action": {
   "default_icon": "icon.png"
  },

  "permissions": [
   "activeTab", 
   "contextMenus"
   ]
}